{
    "root": true,
    "parser": "@typescript-eslint/parser",
    
    "extends": [
        "eslint:recommended", 
        "plugin:@typescript-eslint/recommended"
    ], 
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    
    "plugins": [
        "@typescript-eslint"
    ],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "parser": "@typescript-eslint/parser",
            "extends": [
              "plugin:@typescript-eslint/recommended"
            ]
        },
        {
        "files": ["*.js"],
        "parser": "@babel/eslint-parser"
    }]
}